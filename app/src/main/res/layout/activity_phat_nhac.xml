<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#4b126e"
    android:weightSum="10"
    android:layout_height="match_parent"
    tools:context="com.example.thampotter.quanlynhac.Activity.PhatNhacActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarphatnhac"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">


    </android.support.v7.widget.Toolbar>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpagerphatnhac"
        android:layout_weight="8"
        android:layout_width="match_parent"
        android:layout_height="0dp">

    </android.support.v4.view.ViewPager>

    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvthoigianchay"
                android:textStyle="bold"
                android:textSize="16sp"
                android:text="00:00"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_weight="0.5"
                android:textColor="#fff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <SeekBar
                android:id="@+id/seekbarbaihat"
                android:layout_weight="9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:textStyle="bold"
                android:text="00:00"
                android:gravity="center"
                android:textSize="16sp"
                android:layout_weight="0.5"
                android:id="@+id/tvtongthoigian"
                android:textColor="#fff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout

            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:background="@null"
                android:src="@drawable/iconsuffle"
                android:scaleType="fitXY"
                android:id="@+id/imagebuttonrandom"
                android:layout_marginRight="15dp"
                android:layout_width="20dp"
                android:layout_height="20dp" />

            <ImageButton
                android:background="@null"
                android:src="@drawable/iconpreview"
                android:scaleType="fitXY"
                android:id="@+id/imagebuttonprev"
                android:layout_marginRight="15dp"
                android:layout_width="60dp"
                android:layout_height="60dp" />

            <ImageButton
                android:background="@null"
                android:src="@drawable/iconplay"
                android:scaleType="fitXY"
                android:id="@+id/imagebuttonplay"
                android:layout_marginRight="15dp"
                android:layout_width="70dp"
                android:layout_height="70dp" />

            <ImageButton
                android:background="@null"
                android:src="@drawable/iconnext"
                android:scaleType="fitXY"
                android:id="@+id/imagebuttonnext"
                android:layout_marginRight="15dp"
                android:layout_width="60dp"
                android:layout_height="60dp" />

            <ImageButton
                android:background="@null"
                android:src="@drawable/iconrepeat"
                android:scaleType="fitXY"
                android:id="@+id/imagebuttonrepeat"
                android:layout_marginRight="15dp"
                android:layout_width="20dp"
                android:layout_height="20dp" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>
