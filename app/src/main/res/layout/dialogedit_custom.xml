<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvtitleedit"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:text="Sửa bài hát"
        android:textSize="30sp"
        android:textColor="#4652d2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_margin="10dp"
        android:id="@+id/tvtenbaihatedit"
        android:layout_below="@+id/tvtitleedit"
        android:textSize="20sp"
        android:text="tên bài hát"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:singleLine="true"
        android:id="@+id/edtenbaihatedit"
        android:layout_margin="5dp"
        android:textSize="25sp"
        android:layout_below="@+id/tvtenbaihatedit"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <LinearLayout
        android:layout_margin="10dp"
        android:layout_below="@+id/edtenbaihatedit"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_weight="1"
            android:id="@+id/btnxacnhanedit"
            android:text="Xác nhận"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <Button
            android:layout_weight="1"
            android:id="@+id/btnhuyedit"
            android:text="Hủy"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

</RelativeLayout>