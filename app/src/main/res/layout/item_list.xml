<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:background="@drawable/custom_background_banner"
        android:layout_width="match_parent"
        android:layout_height="200dp"/>

    <ImageView
        android:scaleType="fitXY"
        android:id="@+id/imgviewbackgroundbanner"
        android:layout_width="match_parent"
        android:layout_height="200dp" />



    <RelativeLayout
        android:id="@+id/relative1"
        android:layout_alignBottom="@+id/imgviewbackgroundbanner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/imgviewbanner"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:padding="2dp"
            />
        <TextView
            android:textStyle="bold"
            android:textColor="#ffff"
            android:text="lỡ yêu mất rồi"
            android:textSize="17sp"
            android:id="@+id/titlebannerbaihat"
            android:layout_toRightOf="@+id/imgviewbanner"
            android:layout_marginTop="5dp"
            android:layout_alignTop="@+id/imgviewbanner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:layout_toRightOf="@id/imgviewbanner"
            android:layout_below="@+id/titlebannerbaihat"
            android:layout_width="match_parent"
            android:layout_marginTop="7dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/texviewnoidung"
                android:textColor="#ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:layout_marginRight="40dp"
                android:maxLines="2"
                android:text="chào bạn đến với ca khúc của ca sĩ mới"
                />

        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>