<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imgbaihathot"
        android:scaleType="fitXY"
        android:layout_margin="3dp"
        android:layout_width="80dp"
        android:layout_height="80dp" />

    <TextView
        android:text="Tên bài hát"
        android:textSize="18sp"
        android:textColor="#363636"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="7dp"
        android:layout_toRightOf="@+id/imgbaihathot"
        android:ellipsize="end"
        android:maxLines="1"
        android:id="@+id/tvtenbaihathot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:textColor="#8c8a8a"
        android:textSize="18sp"
        android:text="Tên ca Sĩ"
        android:maxLines="1"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/imgbaihathot"
        android:layout_marginTop="7dp"
        android:layout_below="@+id/tvtenbaihathot"
        android:id="@+id/tvtencasibaihathot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_marginRight="10dp"
        android:src="@drawable/iconlove"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:id="@+id/imgluotthich"
        android:layout_width="30dp"
        android:layout_height="30dp" />
</RelativeLayout>